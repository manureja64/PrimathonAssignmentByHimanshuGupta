<!DOCTYPE html>
<html lang="en">
<%- include('layouts/head');-%>
    <%- include('layouts/header');-%>
        <style>
            .update {
                display: flex;
                justify-content: space-between;
            }
        </style>

        <body>
            <!-- Navigation-->
            <%- include('layouts/navbar');-%>
                <div class="update">
                    <span>
                        <a href="<%= direction.url+'/update' %>">Update Direction</a>
                    </span>

                </div>

                <hr>
                <p>
                    Test: <a href="<%= direction.test.url %>">
                        <%- direction.test.title %>
                    </a>
                </p>
                <hr>
                <h1>
                    <%= title %>
                </h1>
                <dl>
                    <dt><u> Number of Options</u>: <b>
                            <%= direction.test.numOfOptions %>
                        </b>
                    </dt> <br>

                    <dt>
                        <b><u>Direction</u>:</b>
                        <%- direction.direction %>
                    </dt>
                </dl>
                <div style="margin-left: 20px;margin-top: 20px;">
                    <h4>Questions</h4>
                    <ol>
                        <% for( let i=0; i < direction_questions.length; i++ ) { %>
                            <li>
                                <a href="<%= direction_questions[i].url%> " target="_blank">
                                    <%- direction_questions[i].question %>
                                </a>
                            </li>
                            <% } %>
                                <% if (direction_questions.length===0) { %>
                                    This direction has no questions.

                                    <% } %>
                                        <dt>
                                            <a href="/catalog/question/create/<%= direction._id %> "
                                                target="_blank">Create a
                                                Question</a>
                                        </dt>

                    </ol>

                </div>
                <hr>
                <div class="update">
                    <span>
                        <a href="<%= direction.url+'/update' %>">Update Direction</a>
                    </span>
                    <span>
                        <a href="<%= direction.url+'/delete' %>"> Delete Direction</a>
                    </span>
                </div>
        </body>

        <script src="js/index.js"></script>

</html>