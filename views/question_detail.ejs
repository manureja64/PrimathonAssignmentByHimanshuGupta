<!DOCTYPE html>
<html lang="en">
<%- include('layouts/head');-%>
    <%- include('layouts/header');-%>

        <style>
            /* * {
                margin: 0rem;
                padding: 0rem;
                box-sizing: border-box;
            } */

            .update {
                /* box-sizing: border-box; */
                display: flex;
                justify-content: space-between;
                align-content: center;
                /* background-color: brown; */
            }
        </style>

        <body>
            <!-- Navigation-->
            <%#- include('layouts/navbar');-%>
                <div class="update">
                    <span>
                        <a href="<%= question.url+'/update'%>">Update Question</a>
                    </span>
                </div>
                <hr>

                <h1>
                    <%= title %>
                </h1>
                <!-- <h4>Question</h4> -->
                <!-- <br> -->
                <dl>
                    <!-- for loop should NOT be present -->
                    <%# for( let i=0; i < question.length; i++ ) { %>
                        <dt>
                            <b><a href="<%= question.test.url %> ">Test:</a></b>
                            <%- question.test.title %> <br>
                                <b><a href="<%= question.direction.url %>"> Direction: </a></b>
                                <%- question.direction.direction %>
                                    <br><br>

                        </dt>
                        <dt><b>Question: </b>
                            <%- question.question %>
                        </dt>
                        <!-- <dt>
                        <%# if (question.img.data) { %>
                            <img src="data:image/<%#= question.img.contentType %>;base64,<%#= question.img.data.toString('base64') %>"
                                alt="This is an image">

                            <%# } %>
                    </dt> -->
                        Options:
                        <ul>
                            <li>
                                <%- question.a %>
                            </li>
                            <li>
                                <%- question.b %>
                            </li>
                            <li>
                                <%- question.c %>
                            </li>
                            <li>
                                <%- question.d %>
                            </li>
                            <% if (question.test.numOfOptions===5) { %>
                                <li>
                                    <%- question.e %>
                                </li>
                                <% } %>

                                    <li>
                                        Ans: <%- question.ans %>
                                    </li>
                                    Solution:
                                    <li>
                                        <%- question.solution %>
                                    </li>
                        </ul>
                        <%# } %>
                            <hr>
                            <div class="update">
                                <span>
                                    <a href="<%= question.url+'/update'%>"> Update Question</a>
                                </span>
                                <span>
                                    <a href="<%= question.url+'/delete'%>"> Delete Question</a>
                                </span>
                            </div>

                </dl>


        </body>
        <%#- include('layouts/scripts.js');-%>
            <script src="js/scripts.js"></script>

</html>