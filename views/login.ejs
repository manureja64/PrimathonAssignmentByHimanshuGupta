<!DOCTYPE html>
<html lang="en">
<!-- Header -->
<%- include('layouts/head');-%>
    <%- include('layouts/header');-%>

        <style>
            .page-heading {
                display: flex;
                color: brown;
                font-weight: bold;
                justify-content: center;
                font-family: 'Times New Roman', Times, serif;
            }

            .login {
                display: flex;
                color: saddlebrown;

                /* border: 2px solid saddlebrown; */
            }

            .login .la-login {
                color: saddlebrown;
                font-weight: bold;
                font-family: 'Times New Roman', Times, serif;
                padding: 0rem 2rem;
            }

            .login .in-login {
                padding: 0rem 2rem;
                color: black;
                font-weight: bold;
            }

            .sbutton {
                background-color: burlywood;
                border: 2px solid saddlebrown;
                border-radius: 1rem;

            }
        </style>

        <body style="background-color: cornsilk;">
            <!-- Navigation bar -->
            <%- include('layouts/navbar');-%>
                <div class="page-heading">
                    <h1>Login</h1>
                </div>

                <!-- Page Header -->
                <header class="masthead" style="background-image: url('/img/contact-bg.jpg')">

                </header>

                <!-- Main Content -->
                <main class="mb-4">
                    <div class="container px-4 px-lg-5">
                        <div class="row gx-4 gx-lg-5 justify-content-center">
                            <div class="col-md-10 col-lg-8 col-xl-7">
                                <% if(errors!=null && errors.length>0){%>
                                    <ul class="list-group"></ul>
                                    <% for(var i=0; i<errors.length; i++) { %>
                                        <li class="list-group-item list-group-item-danger">
                                            <%=errors[i]%>
                                        </li>
                                        <% } %>
                                            </ul>
                                            <%}%>


                                                <form action="/users/login" method="POST">

                                                    <!-- <form action="/users/register" method="POST" enctype="multipart/form-data"> -->

                                                    <div>
                                                        <div class="login">
                                                            <label class="la-login">User Name</label>
                                                            <input class="in-login" type="text" placeholder="username"
                                                                id="username" name="username" value="<%= username %>">
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <div class="login">
                                                            <label class="la-login">Password</label>
                                                            <input class="in-login" type="password"
                                                                placeholder="password" id="password" name="password"
                                                                value="<%= password %>">
                                                        </div>
                                                    </div>
                                                    <br>
                                                    <div>
                                                        <button type="submit" class="sbutton">Login</button>
                                                    </div>
                                                </form>

        </body>
        <%#- include('layouts/footer');-%>
            <%- include('layouts/scripts'); -%>

</html>